@model List<OSLProject.Models.ReplyModel>

<div class="container">
    <h2>Replies</h2>

    @if (Model.Any())
    {
        foreach (var reply in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <p class="card-text"><small class="text-muted">Reply by @reply.User on @reply.CreatedAt</small></p>
                </div>
                <div class="card-body">
                    <p class="card-text">@reply.Content</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No replies found for this question.</p>
    }
</div>
