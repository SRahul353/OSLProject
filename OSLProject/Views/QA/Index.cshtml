@model IEnumerable<OSLProject.Models.QAModel>

<div class="container">
    <h2>Questions And answers </h2>

    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text"><small class="text-muted">Questions asked by by @Html.DisplayFor(modelItem => item.User) on @Html.DisplayFor(modelItem => item.CreatedAt)</small></p>
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Questions found.</p>
    }

    <a asp-action="Create" class="btn btn-primary">Create New Questions</a>
</div>